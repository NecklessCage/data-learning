   "source": [
    "df = pd.DataFrame({'A': ['a', 'b', 'c', 'a'] * 1_000_000})\n",
    "before = getsizeof(df)\n",
    "df['A'] = df['A'].astype('category')\n",
    "after = getsizeof(df)\n",
    "print(f'{int(100 * (before - after) / before)}% reduction in size.')"
   ]
